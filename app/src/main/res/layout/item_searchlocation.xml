<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:background="?android:attr/selectableItemBackground"
			  android:clickable="true"
			  android:orientation="vertical"
			  android:padding="8dp">

	<TextView
		android:id="@+id/featureName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="15sp"
		android:textStyle="bold"
		tools:text="Monkey Madness"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/subThoroughfareName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="4dp"
			android:textSize="15sp"
			tools:text="1345"/>

		<TextView
			android:id="@+id/thoroughfareName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="15sp"
			tools:text="20th Avenue"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/localityName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="4dp"
			android:textSize="15sp"
			tools:text="San Francisco,"/>

		<TextView
			android:id="@+id/adminAreaName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="4dp"
			android:textSize="15sp"
			tools:text="California"/>

		<TextView
			android:id="@+id/postalCode"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="15sp"
			tools:text="94122"/>
	</LinearLayout>

	<TextView
		android:id="@+id/countryName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="15sp"
		tools:text="United States"/>
</LinearLayout>